mixin contact-button(outline, color, lg, icon, text, href)
    a.btn.btn-color(href=href target="_blank" class="btn" + outline + color + ' ' + lg)
      span
        i.fa.fa-fw(class=icon)
        span.expand-text=text

mixin contact-buttons(outline, lg)
  .btn-group.mb-3.animated.fadeInRight
    +contact-button(outline, "-github", lg, "fa-github", "boardfish", "https://github.com/boardfish")
    +contact-button(outline, "-linkedin", lg, "fa-linkedin", "Simon Fish", "https://www.linkedin.com/in/boardfish")
    +contact-button(outline, "-gmail", lg, "fa-envelope", "si@mon.fish", "mailto:si@mon.fish")
    +contact-button(outline, "-twitter", lg, "fa-twitter", "@boardfish_", "https://twitter.com/boardfish_")
    +contact-button(outline, "-facebook", lg, "fa-facebook", "Simon Fish", "https://www.facebook.com/simonfish84")
